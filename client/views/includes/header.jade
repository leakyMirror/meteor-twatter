template(name="header")
  header.navbar.navbar-default(role="navigation")
    .navbar-header
      button.navbar-toggle.collapsed(type="button", data-toggle="collapse", data-target="#navigation")
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href="{{pathFor 'stream'}}") Twatter
    .collapse.navbar-collapse#navigation
        ul.nav.navbar-nav
        ul.nav.navbar-nav.navbar-right
            li
              unless loggedIn
                a(href="{{ pathFor 'login' }}") Login
              else
                a#logout-btn(href="#") Logout, {{ username }}
